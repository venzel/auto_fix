{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": ["airbnb-base"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["@typescript-eslint", "prettier"],
    "rules": {
        "indent": ["error", 4],
        "quotes": [2, "single", { "avoidEscape": true }],
        "semi": [2, "never"],
        "camelcase": "off",
        "no-underscore-dangle": "off",
        "object-curly-newline": "off",
        "no-console": "off",
        "class-methods-use-this": "off",
        "import/prefer-default-export": "off",
        "import/extensions": [
            "error",
            "ignorePackages",
            {
                "ts": "never"
            }
        ]
    },
    "settings": {
        "import/resolver": {
            "typescript": {}
        }
    }
}
